<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72px"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:layout_marginEnd="91px"
        android:layout_marginRight="91px"
        android:background="#12FFFFFF"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="123px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/bombard"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:fontFamily="@font/bombard"
            android:paddingStart="54px"
            android:paddingLeft="54px"
            android:text="5"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bombard"
            android:gravity="center"
            android:paddingEnd="50px"
            android:paddingRight="50px"
            android:text="1"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>