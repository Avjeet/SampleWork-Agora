<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agora.UI.LiveBroadcastActivity">

    <FrameLayout
        android:id="@+id/layout_broadcast"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.4"/>


    <ViewStub
        android:id="@+id/stub_pre_select_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_pre_select_match" />

    <ViewStub
        android:id="@+id/stub_pre_edit_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_pre_edit_title" />

</FrameLayout>